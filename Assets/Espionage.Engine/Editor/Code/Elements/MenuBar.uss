:root {
	/* MenuBar Colours */
	--menu-bar-colors-panel: #3c3c3c;
	--menu-bar-colors-border: #191919;

	--menu-bar-colors-button-hover: #464646;
	--menu-bar-colors-button-click: #46607c;
}

.Menu-Bar {
	background-color: var(--menubar-colors-panel);
	height: 24px;
	width: 100%;
	flex-direction: row;

	border-color: var(--menubar-colors-shadow);
	border-top-width: 1px;

	padding-left: 4px;
	padding-right: 4px;
}

.Menu-Bar-Button {
	background-color: initial;
	font-size: 12px;

	margin: 0px;
	padding-left: 10px;
	padding-right: 10px;

	border-radius: 0px;
	border-width: 0px;
}

.Menu-Bar-Button:hover {
	background-color: var(--button-hover);
}

.Menu-Bar-Button:active {
	background-color: var(--button-click);
}
